{
  "name": "cfm-ext",
  "displayName": "Claude Feature Manager",
  "description": "Kanban board for Claude Code feature/PLAN.md workflow",
  "version": "0.0.1",
  "publisher": "woophily",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/philywu/cfm-ext.git"
  },
  "bugs": {
    "url": "https://github.com/philywu/cfm-ext/issues"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:cfm-ext.openPanel",
    "onCommand:cfm-ext.init"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cfm-ext.openPanel",
        "title": "Open",
        "category": "Claude Feature Manager"
      },
      {
        "command": "cfm-ext.init",
        "title": "Init",
        "category": "Claude Feature Manager"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd webview && npx vite build",
    "copy:templates": "node -e \"const fs=require('fs');fs.mkdirSync('out/template',{recursive:true});['PLAN.md','HOWTO.md','feature lifecycle manager.md'].forEach(f=>fs.copyFileSync('src/template/'+f,'out/template/'+f))\"",
    "build": "npm run compile && npm run copy:templates && npm run build:webview",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "vite": "^6.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^9.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/vite": "^4.0.0",
    "tailwindcss": "^4.0.0"
  }
}
